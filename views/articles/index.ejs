<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Blog</title>
</head>

<body>
    <div class="container mt-2">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/article/new" class="btn btn-success">New Article</a>


        <% articles.forEach( article=> { %>
            <!-- Parent Card -->
            <div class="card mt-4">
                <!-- Title -->
                <div class="card-title">
                    <h2 class="title p-3">
                        <%= article.title %>
                    </h2>
                </div>
                <!--CreatedAt Date -->
                <div class="card-date text-muted p-3">
                    <div style="margin-top: -33px;">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                </div>
                <div class="card-description p-3" style="margin-top: -25px; font-size: 18px;">
                    <%= article.description %>
                </div>

                <div class="card-button mt-3 p-3">
                    <!-- Slug -->
                    <a href="/article/<%= article.slug %>" class="btn btn-primary">Read More</a>

                    <form action="/article/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>



            <% }) %>


    </div>
</body>

</html>